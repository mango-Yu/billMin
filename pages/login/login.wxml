<!--pages/login/login.wxml-->
<view class="container">
  <view class="login">
      <text class="title">登陆</text>
  </view>
   <view class="desc">
      <text class="remind">这是一个简单的记账本\r\n可以让你知道你的钱花在哪了</text> 
  </view>
  <view class="login_form">
      <van-cell-group>
        <van-field
          value="{{ name }}"
          label="用户名"
          placeholder="请输入用户名"
          bind:change="onChangeUser"
        />
        <van-field
          value="{{ password }}"
          label="密码"
          placeholder="请输入密码"
           type="password"
           bind:change="onChangePwd"
        />
      </van-cell-group>  
  </view>
  <view  class="login_btn">
    <van-button type="primary"  bindtap="onSubmit">登陆</van-button> <van-button type="default" bindtap="toRegister">注册</van-button>
  </view>
  
</view>
