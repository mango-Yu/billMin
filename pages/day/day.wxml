<!--pages/day/day.wxml-->
<view class="day_form">
	<view class="date">
		<van-button class="date_btn" type="primary" size="normal" bindtap="showDate">{{form.date}}</van-button>
	</view>
	<view class="date_prop">
		<van-datetime-picker class="select_time" type="date" value="{{ currentDate }}" bind:input="onInput" formatter="{{ formatter }}" bind:confirm="selectDate" bind:cancel="cancelDate" wx:if="{{show}}" visible-item-count="3" />
	</view>
	<view class="group_con">
		<text  class="van-doc-demo-block__title">{{ eat }}</text>
		<van-cell-group>
			<van-field model:value="{{ form.breakfast }}" label="早餐" type="number" input-align="right" placeholder="0" data-key="breakfast" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.lunch }}" label="中餐" type="number" input-align="right" placeholder="0" data-key="lunch" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.dinner }}" label="晚餐" type="number" input-align="right" placeholder="0" data-key="dinner" bind:input="changeInput" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.traffic }}" label="交通" type="number" input-align="right" placeholder="0" data-key="traffic" bind:input="changeInput" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.sock }}" label="零食费用" type="number" input-align="right" placeholder="0" data-key="sock" bind:input="changeInput" bind:blur="blurInput" />
			<text class="desc">包含饮料，零食，肯德基麦当劳等各种小吃</text>
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.house }}" label="房租" type="number" input-align="right" placeholder="0" data-key="house" bind:input="changeInput" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-cell title="是否上班">
				<van-switch checked="{{ form.work }}" data-key="work" bind:change="changeInput" />
			</van-cell>
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.buy }}" label="网购费用" type="number" input-align="right" placeholder="0" data-key="buy" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.buysRemind }}" type="textarea" input-align="left" placeholder="网购费用备注" autosize data-key="buysRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.foods }}" label="食材超市费用" type="number" input-align="right" placeholder="0" data-key="foods" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.foodsRemind }}" type="textarea" input-align="left" placeholder="食材超市费用备注" autosize data-key="foodsRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.loans }}" label="贷款费用" type="number" input-align="right" placeholder="0" data-key="loans" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.loansRemind }}" type="textarea" input-align="left" placeholder="贷款费用备注" autosize data-key="loansRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.visa }}" label="信用卡花呗费用" type="number" input-align="right" placeholder="0" data-key="visa" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.visaRemind }}" type="textarea" input-align="left" placeholder="信用卡花呗费用备注(不计总费用)" autosize data-key="visaRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.clothes }}" label="服装费用" type="number" input-align="right" placeholder="0" data-key="clothes" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.clothesRemind }}" type="textarea" input-align="left" placeholder="服装费用备注" autosize data-key="clothesRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.skin }}" label="化妆品费用" type="number" input-align="right" placeholder="0" data-key="skin" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.skinRemind }}" type="textarea" input-align="left" placeholder="化妆品费用备注" autosize data-key="skinRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.health }}" label="医疗费用" type="number" input-align="right" placeholder="0" data-key="health" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.healthRemind }}" type="textarea" input-align="left" placeholder="医疗费用备注" autosize data-key="healthRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.insure }}" label="保险费用" type="number" input-align="right" placeholder="0" data-key="insure" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.insureRemind }}" type="textarea" input-align="left" placeholder="保险费用备注" autosize data-key="insureRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.play }}" label="旅游费用" type="number" input-align="right" placeholder="0" data-key="play" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.playRemind }}" type="textarea" input-align="left" placeholder="旅游费用备注" autosize data-key="playRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.gifts }}" label="人情费用" type="number" input-align="right" placeholder="0" data-key="gifts" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.giftsRemind }}" type="textarea" input-align="left" placeholder="人情费用备注" autosize data-key="giftsRemind" bind:blur="blurInput" />
		</van-cell-group>
	</view>
	<view class="group_con">
		<van-cell-group>
			<van-field model:value="{{ form.others }}" label="其他费用" type="number" input-align="right" placeholder="0" data-key="others" bind:input="changeInput" bind:blur="blurInput" />
			<van-field model:value="{{ form.othersRemind }}" type="textarea" input-align="left" placeholder="其他费用备注" data-key="othersRemind" bind:blur="blurInput" autosize />
		</van-cell-group>
	</view>
	<view>
		<van-cell-group>
			<van-cell title="总计：" value="{{all}}" />
		</van-cell-group>
	</view>
	<view class="sub_btn">
		<van-button type="primary" bindtap="onSubmitDay">提交</van-button>
	</view>
</view>