/* pages/day/day.wxss */
.day_form {
  position: relative;
  width: 100%;
}

.date {
  width: 100%;
  margin: 10px auto;
  display: block;
  text-align: center;

}

.date_prop {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

.group_con {
  margin: 10px 0;
  background: #fff;
  position: relative;
}

image{
  width: 35px;
  height: 35px;
  position: absolute;
  top: 5px;
  left: 10px;
  z-index: 10;
}
.group_con-eatting-img{
  width: 35px;
  height: 35px;
  position: relative;
  top: 5px;
  left: 10px;
  z-index: 10;
}
.group_con-eatting image:nth-child(1){
  top: 5px;
}
.group_con-eatting image:nth-child(3){
  top: 50px;
}
.group_con-eatting image:nth-child(5){
  top: 90px;
}
.desc {
  margin-left: 10px;
  color: rgba(69, 90, 100, 0.6);
  font-weight: normal;
  font-size: 14px;
  line-height: 16px;
}

.van-doc-demo-block__title {
  color: rgba(69, 90, 100, 0.6);
  font-weight: normal;
  font-size: 14px;
  line-height: 16px;
  margin-left: 20px;
}

.van-doc-demo-block__card {
  margin: 0 12px 0;
  overflow: hidden;
  border-radius: 8px;
}

.van-doc-demo-block:first-of-type .van-doc-demo-block__title {
  padding-top: 20px;
}

.sub_btn {
  text-align: center;
  margin: 5px;
}

.day_form .van-button,
.sub_btn .van-button {
  border-radius: 5px !important;
}
.van-field__label{
  width: 200rpx;
}
.van-cell__title{
  margin-left: 40px;
}
.van-field__label--disabled{
  color: #333 !important;
}
.van-field__input--disabled{
  color: #333 !important;
}